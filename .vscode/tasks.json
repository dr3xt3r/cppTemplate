{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Clean Generated Files",
			"type": "shell",
			"command": "${workspaceFolder}/scripts/clean_project.sh",
			"group": {
			  "kind": "none",
			  "isDefault": false
			},
			"presentation": {
			  "reveal": "always",
			  "panel": "shared"
			},
			"problemMatcher": []
		},
        {
            "label": "Cppcheck - Run in terminal",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/cppcheck.sh output_to_terminal",
            "problemMatcher": [],
            "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": false,
              "panel": "shared"
            }
        },
        {
            "label": "Cppcheck - Run and generate HTML report",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/cppcheck.sh output_to_file",
            "problemMatcher": [],
            "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": false,
              "panel": "shared"
            }
        }

	]
}